generator client {
  provider = "prisma-client-js"
  //  这里配置的时 prisma-client的初始化默认配置，暂时保持默认不要手动配置
  //  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER // 普通用户 仅查看
  USER_SUPER // 可以发表评论的用户
  EDITOR // 内容编辑
  ADMIN // 管理员
}

enum UserStatus {
  ACTIVE // 活跃
  SUSPENDED // 停用
  BANNED // 封禁
}

enum CommentStatus {
  PENDING // 待审核
  APPROVED // 已审核
  REJECTED // 已拒绝
  HIDDEN // 已隐藏
  NORMAL // 正常状态
  DELETE // 删除状态
}

model User {
  /// 用户唯一id
  id            Int        @id @default(autoincrement())
  email         String     @unique @db.VarChar(50) /// 邮箱
  emailVerified Boolean    @default(false) // 邮箱是否已验证
  username      String?    @unique @db.VarChar(20) /// 用户唯一名称
  password      String     @db.VarChar(100) /// 用户密码
  hashpassword  String     @db.VarChar(100) /// hash 密码
  displayName   String?    @db.VarChar(30) /// 显示名称
  avatar        String? /// 头像
  role          UserRole   @default(USER) /// 用户类型
  age           Int?
  mobile        String?    @unique()
  status        UserStatus @default(ACTIVE) /// 1 正常 2 禁用
  gender        Int        @default(1) /// 1 未知 2 男 3 女
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  lastLoginAt   DateTime? /// 最后登录时间
  posts         Post[] ///用户发表的文章

  /// 用户收藏的文章信息，存id
  likes LikePost[] @relation("UserLikes")

  commentLikes CommentLike[] @relation("CommentLikesUsers")

  /// 用户的收藏文章
  favorites Favorite[] @relation("UserFavorites")

  comment Comment[] @relation("UserComments")

  commentApplyUser Comment[]    @relation("CommentApplyUser")
  unLikePosts      unLikePost[] @relation("UserUnLikes")

  /// 索引字段
  @@index([email])
  @@index([username])
  @@index([createdAt])
}

model Post {
  id             Int      @id @default(autoincrement())
  title          String /// 文章标题
  content        String   @db.Text /// 文章内容
  previewContent String? /// 文章预览内容
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  published      Boolean  @default(false) /// 是否公开

  deletedAt DateTime? @map("deleteAt") /// 删除时间

  /// 文章作者
  author   User @relation(fields: [authorId], references: [id])
  authorId Int

  /// 点赞功能
  likes         LikePost[] @relation("PostLikes")
  likeCount     Int        @default(0)
  favorites     Favorite[] @relation("PostFavorites")
  favoriteCount Int        @default(0)
  postTags      PostTag[] /// 显示关系指定

  comments    Comment[]    @relation("PostComments")
  unLikePosts unLikePost[] @relation("PostUnLikes")

  /// 添加索引，方便查找时过滤
  @@index([deletedAt])
}

model Tag {
  id       Int       @id @default(autoincrement())
  tagName  String    @db.VarChar(50)
  postTags PostTag[] /// 显示关系指定
  /// posts    Post[]    @relation("PostTag") /// 隐式关系，中间表由 prisma 自动创建
  // postTags PostTag[]

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@index([tagName])
}

// 手动创建 文章标签之间的关联表
model PostTag {
  id        Int      @id @default(autoincrement())
  postId    Int
  tagId     Int
  createdAt DateTime @default(now())

  // 定义管理文章标签之间的关联关系
  post Post @relation(fields: [postId], references: [id])
  tag  Tag  @relation(fields: [tagId], references: [id])

  // 可选：添加唯一约束
  @@unique([postId, tagId])
}

// 文章点赞表
model LikePost {
  id Int @id @default(autoincrement())

  /// 关联关系，Post表 的 id 和  postId 字段关联，关联关系是  PostLikes 是一对多的关系 一个文章，可以有多个点赞
  post   Post @relation(fields: [postId], references: [id], name: "PostLikes")
  postId Int

  /// 关联 user表 一个喜欢，对应一个user
  user   User @relation(fields: [userId], references: [id], name: "UserLikes")
  userId Int

  // 额外字段：点赞时间
  likedAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  /// 防止重复点赞 一个用户，只能点赞一次
  @@unique([userId, postId])
}

// 文章点踩表
model unLikePost {
  id     Int  @id @default(autoincrement())
  /// 关联关系，Post表 的 id 和  postId 字段关联，关联关系是  PostLikes 是一对多的关系 一个文章，可以有多个点赞
  post   Post @relation(fields: [postId], references: [id], name: "PostUnLikes")
  postId Int

  /// 关联 user表 一个喜欢，对应一个user
  user   User @relation(fields: [userId], references: [id], name: "UserUnLikes")
  userId Int

  unlikeAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  /// 防止重复点赞 一个用户，只能点踩一次
  @@unique([userId, postId])
}

// 文章收藏表
model Favorite {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], name: "UserFavorites")
  userId    Int
  post      Post     @relation(fields: [postId], references: [id], name: "PostFavorites")
  postId    Int
  favorited Boolean  @default(false) /// 是否喜欢
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 评论模型
model Comment {
  id     Int   @id @default(autoincrement())
  user   User? @relation(fields: [userId], references: [id], name: "UserComments")
  userId Int?
  post   Post  @relation(fields: [postId], references: [id], name: "PostComments")
  postId Int

  parentId Int? /// 父评论id
  rootId   Int? /// 根评论id
  status   CommentStatus @default(NORMAL) // 评论状态

  visitorName  String /// 评论者姓名
  visitorEmail String /// 评论者邮箱

  applyUser         User?   @relation(fields: [applyUserId], references: [id], name: "CommentApplyUser")
  applyUserId       Int? /// 关联申请id
  tempApplyUserName String? /// 临时申请用户名

  content   String    @db.Text /// 评论内容
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? // 软删除
  ipAddress String    @db.Text /// 评论者ip地址
  userAgent String    @db.Text // 请求头信息

  /// 掉进陷阱了，，如果like 加上? 则模式值不生效
  like         Int           @default(0) /// 评论点赞数量
  unlike       Int           @default(0) /// 评论点踩数量
  likeAt       DateTime?     @default(now()) /// 评论点赞时间
  unlikeAT     DateTime?     @default(now()) /// 评论点踩时间
  commentLikes CommentLike[] @relation("CommentLikes")

  @@index([postId, status, createdAt])
  @@index([parentId, createdAt])
  @@index(userId) // 用户查询用户是都点过赞，整个索引
  @@map("comment") // 映射数据库中，实际表名称
}

// 中间表，记录用户点赞的数据 不喜欢的数据，也在这里面存
model CommentLike {
  id        Int      @id @default(autoincrement())
  comment   Comment  @relation(fields: [commentId], references: [id], name: "CommentLikes")
  commentId Int
  // 评论点赞中间表
  user      User     @relation(fields: [userId], references: [id], name: "CommentLikesUsers")
  userId    Int
  like      Boolean  @default(false)
  unlike    Boolean  @default(false)
  createdAt DateTime @default(now())
}
