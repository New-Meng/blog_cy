generator client {
  provider = "prisma-client-js"
  //  这里配置的时 prisma-client的初始化默认配置，暂时保持默认不要手动配置
  //  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER // 普通用户 仅查看
  USER_SUPER // 可以发表评论的用户
  EDITOR // 内容编辑
  ADMIN // 管理员
}

enum UserStatus {
  ACTIVE // 活跃
  SUSPENDED // 停用
  BANNED // 封禁
}

enum CommentStatus {
  PENDING // 待审核
  APPROVED // 已审核
  REJECTED // 已拒绝
  HIDDEN // 已隐藏
  NORMAL // 正常状态
  DELETE // 删除状态
}

model User {
  /// 用户唯一id
  id            Int        @id @default(autoincrement())
  email         String     @unique @db.VarChar(50) /// 邮箱
  emailVerified Boolean    @default(false) // 邮箱是否已验证
  username      String?    @unique @db.VarChar(20) /// 用户唯一名称
  password      String     @db.VarChar(100) /// 用户密码
  hashpassword  String     @db.VarChar(100) /// hash 密码
  displayName   String?    @db.VarChar(30) /// 显示名称
  avatar        String? /// 头像
  role          UserRole   @default(USER) /// 用户类型
  age           Int?
  mobile        String?    @unique()
  status        UserStatus @default(ACTIVE) /// 1 正常 2 禁用
  gender        Int        @default(1) /// 1 未知 2 男 3 女
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  lastLoginAt   DateTime? /// 最后登录时间
  posts         Post[] ///用户发表的文章

  /// 用户收藏的文章信息，存id
  likes Like[] @relation("UserLikes")

  /// 用户的收藏文章
  favorites Favorite[] @relation("UserFavorites")

  comment Comment[] @relation("UserComments")

  commentApplyUser Comment[] @relation("CommentApplyUser")

  /// 索引字段
  @@index([email])
  @@index([username])
  @@index([createdAt])
}

model Post {
  id             Int      @id @default(autoincrement())
  title          String /// 文章标题
  content        String   @db.Text /// 文章内容
  previewContent String? /// 文章预览内容
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  published      Boolean  @default(false) /// 是否公开

  deletedAt DateTime? @map("deleteAt") /// 删除时间

  /// 文章作者
  author   User @relation(fields: [authorId], references: [id])
  authorId Int

  /// 点赞功能
  likes         Like[]     @relation("PostLikes")
  likeCount     Int        @default(0)
  favorites     Favorite[] @relation("PostFavorites")
  favoriteCount Int        @default(0)
  postTags      PostTag[] /// 显示关系指定
  // tags          Tag[]      @relation("PostTag")
  // postTags      PostTag[]
  // postTags      PostTag[]

  comments Comment[] @relation("PostComments")

  /// 添加索引，方便查找时过滤
  @@index([deletedAt])
}

model Tag {
  id       Int       @id @default(autoincrement())
  tagName  String    @db.VarChar(10)
  postTags PostTag[] /// 显示关系指定
  /// posts    Post[]    @relation("PostTag") /// 隐式关系，中间表由 prisma 自动创建
  // postTags PostTag[]

  @@index([tagName])
}

// 手动创建 文章标签之间的关联表
model PostTag {
  id        Int      @id @default(autoincrement())
  postId    Int
  tagId     Int
  createdAt DateTime @default(now())

  // 定义管理文章标签之间的关联关系
  post Post @relation(fields: [postId], references: [id])
  tag  Tag  @relation(fields: [tagId], references: [id])

  // 可选：添加唯一约束
  @@unique([postId, tagId])
}

model Like {
  id Int @id @default(autoincrement())

  /// 关联关系，Post表 的 id 和  postId 字段关联，关联关系是  PostLikes 是一对多的关系 一个文章，可以有多个点赞
  post   Post @relation(fields: [postId], references: [id], name: "PostLikes")
  postId Int

  /// 关联 user表 一个喜欢，对应一个user
  user   User @relation(fields: [userId], references: [id], name: "UserLikes")
  userId Int

  // 额外字段：点赞时间
  likedAt DateTime @default(now())

  /// 防止重复点赞 一个用户，只能点赞一次
  @@unique([userId, postId])
}

model Favorite {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], name: "UserFavorites")
  userId    Int
  post      Post     @relation(fields: [postId], references: [id], name: "PostFavorites")
  postId    Int
  createdAt DateTime @default(now())
}

// 评论模型
model Comment {
  id     Int   @id @default(autoincrement())
  user   User? @relation(fields: [userId], references: [id], name: "UserComments")
  userId Int?
  post   Post  @relation(fields: [postId], references: [id], name: "PostComments")
  postId Int

  parentId Int? /// 父评论id
  rootId   Int? /// 根评论id
  status   CommentStatus @default(NORMAL) // 评论状态

  visitorName  String /// 评论者姓名
  visitorEmail String /// 评论者邮箱

  applyUser   User? @relation(fields: [applyUserId], references: [id], name: "CommentApplyUser")
  applyUserId Int? /// 关联申请id
  tempApplyUserName String? /// 临时申请用户名

  content   String    @db.Text /// 评论内容
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? // 软删除
  ipAddress String    @db.Text /// 评论者ip地址
  userAgent String    @db.Text // 请求头信息

  link   String? /// 评论点赞数量
  unLink String? /// 评论点踩数量

  @@index([postId, status, createdAt])
  @@index([parentId, createdAt])
  @@map("comment") // 映射数据库中，实际表名称
}
